
<h1> Create question </h1>

<form action="/question" method="post">
  <div class="form-group">
    <label for="question">Phrase the question:</label>
    <input id="question" name="question" type="text">
  </div>
  <div class="form-group">
    <input name="method" type="hidden" value="post">
    <label for="survey_id">Select a Survey</label>
    <select id='survey_id' name='survey_id' type='text'>
      <% @surveys.each() do |survey| %>
      <option value="<%= survey.id()%>"> <%= survey.name() %> </option>
      <% end %>
    </select>
  </div>

  <button type="submit">Assign question to survey</button>
</form>

<a href="/">HOME</a>
