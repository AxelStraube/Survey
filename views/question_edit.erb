<h1> Update question </h1>

<form action="/surveys" method="patch">
  <div class="form-group">
    <label for="question">Rephrase the question:</label>
    <input id="question" name="question" type="text">
  </div>
  <div class="form-group">
    <input name="method" type="hidden" value="post">
    <label for="survey_id">Confirm which survey this question belongs to:</label>
    <select id='survey_id' name='survey_id' type='text'>
      <% @surveys.each() do |survey| %>
      <option value="<%= survey.id()%>"> <%= survey.name() %> </option>
      <% end %>
    </select>
  </div>

  <button type="submit">Update Question</button>
</form>

<a href="/">HOME</a>
